{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  // Base TS Config Used by VsCode
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowJs": true,
    "lib": [
      "es2021",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
